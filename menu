import pygame
import sys

pygame.init()

WIDTH, HEIGHT = 720, 360


screen = pygame.display.set_mode((720, 360))
clock = pygame.time.Clock()

class Button():
    def __init__(self, rect):
        self.rect = rect
    
    def check(self):
        pos = pygame.mouse.get_pos()
        if self.rect.collidepoint(pos):
            return True
        return False

class Menu():
    def __init__(self):
        self.pos = (230, 30)
        self.size = (WIDTH-self.pos[0]*2, HEIGHT-self.pos[1]*2)
        self.rect = pygame.Rect(*self.pos, *self.size)
        self.retry = Button(pygame.Rect(self.pos[0]+self.size[0]/4, self.pos[1]+self.size[1]/4, self.size[0]/2, self.size[1]/2))
    
    def draw(self, screen):
        pygame.draw.rect(screen, 'green', self.rect)
        pygame.draw.rect(screen, 'white', self.retry.rect)

while True:
    pillars = []
    men_u = Menu()
    while True:
        for event in pygame.event.get():
            if event.type == pygame.QUIT:
                pygame.quit()
                sys.exit(0)
            elif event.type == pygame.MOUSEBUTTONDOWN or event.type == pygame.KEYDOWN:
                if men_u.retry.check():
                    #run main
                    print('main')

        men_u.draw(screen)

        pygame.display.flip()
